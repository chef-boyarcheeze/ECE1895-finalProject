<Window x:Class="FamilyTree_ECE1895.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyTree_ECE1895"
        mc:Ignorable="d"
        Title="Family Tree" Height="450" Width="800" FocusManager.FocusedElement="{Binding ElementName=Canvas}">

    <Canvas Name="Canvas" Focusable="True" MouseLeftButtonDown="addItem" Background="White">
        <TextBlock Canvas.Left="268" TextWrapping="Wrap" Text="Click anywhere to add a family member:" Canvas.Top="13" Height="24" Width="264" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBlock x:Name="FamilySize" Height="24" Canvas.Left="10" TextWrapping="Wrap" Text="Family Size: 0" Canvas.Top="13" Width="111" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock x:Name="EdgeCount" Height="24" Canvas.Left="10" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="42" Width="111"/>

    </Canvas>
</Window>
